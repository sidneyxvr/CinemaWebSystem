@model IEnumerable<CinemaWebSystem.Models.Filme>

@{
    ViewData["Title"] = "Index";
}

<h2>Index</h2>


<section>
    <div class="row">
        @foreach(var item in Model)
        {
        <div class="col-sm-4 col-md-3 col-lg-2">
            @{
                if (item.Imagem != null)
                {
                    var base64 = Convert.ToBase64String(item.Imagem);
                    var imgsrc = string.Format("data:image/gif;base64,{0}", base64);
                    <img src="@imgsrc" class="img-thumbnail img-fluid" style="max-width:175px" />
                    <h5>@item.Titulo</h5>
                    <img src="@Classificacao.ClassificacaoImagens()[item.Classificacao]" style="max-width: 30px; padding-bottom: 10px" />
                    <br />
                    <a asp-action="EscolherSessao" asp-route-id="@item.FilmeId">Escolher Sessão</a>
}
            }

        </div>
        }
    </div>
</section>